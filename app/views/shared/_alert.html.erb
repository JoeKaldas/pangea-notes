<div>
  <%if flash[:notice] and f!lash[:notice].empty?%>
    <div class="alert alert-success fade alert-dismissible show cursor-pointer d-flex align-items-center justify-content-between" role="alert" style="margin: 10px 0">
      <span><%= flash[:notice]%></span>
      <i class="icon-delete icon-smaller" data-dismiss="alert" aria-label="Close"></i>
    </div>
  <%end%>
  <%if flash[:alert] and !flash[:alert].empty?%>
    <div class="alert alert-danger fade alert-dismissible show cursor-pointer d-flex align-items-center justify-content-between" role="alert" style="margin: 10px 0">
      <span><%= flash[:alert]%></span>
      <i class="icon-delete icon-smaller" data-dismiss="alert" aria-label="Close"></i>
    </div>
  <%end%>
</div>